<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/location_details_progress"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/location_details_cancel_btn"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/red" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/location_details_title"
                    android:text="Sublet with family Rent At Mirpur"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:weightSum="3"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:background="@drawable/edit_strok_bg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/location_details_image_one"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_add_photo_alternate_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:background="@drawable/edit_strok_bg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/location_details_image_two"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_add_photo_alternate_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="5dp"
                        android:background="@drawable/edit_strok_bg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/location_details_image_three"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_add_photo_alternate_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Bedroom(s) :"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/ic_baseline_bedroom_24"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_bed_no"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Attach Bath :"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/ic_baseline_bathroom_24"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_bathroom_no"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Belconi :"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/belconi"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_belconi_no"
                                android:text="2"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Car Parking :"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/car_parking"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_car_parking"
                                android:text="Yes"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Rent for month"
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/location_details_rent_per_month"
                            android:text="3500.00"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Communication"
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:weightSum="6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/location_details_person_name"
                                    android:text="Roben Baskey"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/location_details_person_email"
                                    android:text="baskeyjames10@gmail.com"
                                    android:drawableLeft="@drawable/ic_baseline_email_24"
                                    android:drawablePadding="10dp"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/location_details_person_mobile"
                                    android:text="01717601905"
                                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                                    android:drawablePadding="10dp"
                                    android:layout_margin="5dp"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/location_details_person_location"
                                    android:text="213,(5th floor) Sher E Bangla Road, Royerbazar. , Dhanmondi, Dhaka, Bangladesh"
                                    android:drawableLeft="@drawable/ic_baseline_location_on_24"
                                    android:drawablePadding="10dp"
                                    android:layout_margin="5dp"
                                    android:letterSpacing="0.1"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/location_details_user_image"
                                    app:civ_border_width="1dp"
                                    app:civ_border_color="@color/red"
                                    android:src="@drawable/person_icon"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Preferred Renter"
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/location_details_preferred_renter"
                            android:text="Female only, Female Students, Female Job Holder,"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Additional Details"
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Drawing Room :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_drawing_room"
                                android:text="Yes"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Floor No :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_floor_no"
                                android:text="4th"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Generator :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_generator"
                                android:text="Yes"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="CC TV  :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_cc_tv_camera"
                                android:text="Yes"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Gas Connection  :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_gas_connection"
                                android:text="Line"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Floor Type  :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_floor_type"
                                android:text="Yes"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Lift  :"
                                android:textStyle="bold"
                                android:letterSpacing="0.1"
                                android:drawablePadding="5dp"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/location_details_lift"
                                android:text="Yes"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal" />
                        </LinearLayout>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Description"
                            android:letterSpacing="0.1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/location_details_description"
                            android:text="This is family flat. Finding 1 polite female (student/job holder) for one room. Already 1 female exists in this room. She is student and job holder."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/location_details_add_to_favourite"
                    android:layout_gravity="center"
                    android:text="Add To Favourite"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:textColor="@color/white"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.cardview.widget.CardView>