<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/post_progress"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/post_cancel_btn"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/red" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Title"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/post_title"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_strok_bg"
                        android:padding="10dp"
                        android:hint="Input your title"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Location"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/post_location"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_strok_bg"
                        android:padding="10dp"
                        android:hint="Input your location"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:background="@drawable/edit_strok_bg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/post_image_one"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_add_photo_alternate_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:background="@drawable/edit_strok_bg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/post_image_two"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_add_photo_alternate_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="5dp"
                        android:background="@drawable/edit_strok_bg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/post_image_three"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_add_photo_alternate_24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Preferred Renter"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/post_renter_type"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_strok_bg"
                        android:padding="10dp"
                        android:hint="Enter type of renter are you want."
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Description"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/post_description"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_strok_bg"
                        android:padding="10dp"
                        android:hint="short description about your flat"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Rent for month"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/post_total_rent"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/edit_strok_bg"
                        android:padding="10dp"
                        android:hint="Enter total rent for per month"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Additional Details"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Drawing Room"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_drawing_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Floor No."
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_floor_no_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Bedroom "
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_bedroom_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Attached Bath"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_attach_bath_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Generator"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_generator_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Car Parking"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_car_parking_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Belconi"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_belconi_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="CC TV"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_cc_tv_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Gas Connection"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_gas_connection_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Floor Type"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_floor_type_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Lift"
                            android:textColor="@color/black"
                            android:layout_weight="7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/post_lift_spinner"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/post_confirm_btn"
                        android:background="@drawable/btn_bg"
                        android:text="Post"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_width="150dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.cardview.widget.CardView>