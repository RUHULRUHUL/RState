<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/side_menu_person_image"
            android:src="@drawable/person_icon"
            app:civ_border_color="@color/red"
            app:civ_border_width="2dp"
            app:civ_border_overlay="true"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/side_menu_person_name"
            android:text="Your Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/side_menu_person_mobile"
            android:text="01717601905"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/side_menu_person_email"
            android:text="baskeyjames10@gmail.com"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/side_menu_dashboard_btn"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_dashboard_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/teal_200" />
            <TextView
                android:layout_marginLeft="10dp"
                android:text="Dashboard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_menu_favourite_btn"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/teal_200" />
            <TextView
                android:layout_marginLeft="10dp"
                android:text="Favourite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/side_menu_setting_btn"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="@color/teal_200" />
            <TextView
                android:layout_marginLeft="10dp"
                android:text="Setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>